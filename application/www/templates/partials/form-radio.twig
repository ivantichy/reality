<div class="form-radio {{ parametry.class }}">
  <p class="form-title h3">
    {{ parametry.label }} {% if parametry.required %}<sup>*</sup>{% endif %}
    {% if parametry.zobraz_text_povinny_udaj %}
      <span class="form-povinny"><sup>*</sup> povinný údaj</span>
    {% endif %}
  </p>

  {% if parametry.popis %}
    <p class="form-popis">{{ parametry.popis }}</p>
  {% endif %}
  <div class="form-input form-radio-wrap">
    {% for key, hodnota in parametry.hodnoty %}
    {% set klic = parametry.hodnoty_bez_klice ? hodnota : key %}
      <label class="form-radio-label">
        <input class="radio"
          type="radio"
          name="{{ nazev }}"
          value="{{ klic }}"
          {% if value is not empty and value == klic %}checked="checked"{% endif %}
          {% if parametry.required %}required="required"{% endif %}
          data-error="{% if parametry.error %}{{ parametry.error }}{% else %}{{ parametry.label }}{% endif %}"
          >
        <span class="radio-span" aria-hidden="true"></span>
        <span class="form-radio-text">{{ hodnota }}</span>
      </label>
    {% endfor %}
  </div>
</div>
