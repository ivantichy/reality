{% block content_bottom %}
  <template id="kontaktujte-nas">
    <section
      tabindex="1"
      role="dialog"
      aria-label="Kontaktní formulář"
      aria-hidden="false">
      <div class="kontaktujte-nas">
        <div class="zprava zprava-uspech" role="alert" style="display: none;"></div>
        <form id="form-modal" class="form-modal" action="/kontakty" method="post">

          <h2>Popište nám, co hledáte</h2>

          {% include 'partials/zpravy.twig' %}

          <div class="row form-row">
            <label class="col form-col form-input">
              <span class="form-label">Jméno:<sup aria-hidden="true">*</sup></span>
              <input class="form-text-input"
                type="text" name="jmeno" value=""
                placeholder="Vaše jméno" required=""
                autocomplete="name">
            </label>
            <label class="col form-col form-input">
              <span class="form-label">E-mail:<sup aria-hidden="true">*</sup></span>
              <input class="form-text-input"
                type="email"
                name="email" value=""
                placeholder="Váš email" required=""
                autocomplete="email">
            </label>
          </div>
          <label class="form-input">
            <span class="form-label">Lokalita:</span>
            <input class="form-text-input"
              type="text" name="lokalita"
              value=""
              placeholder="Město nebo obec"
              autocomplete="city">
          </label>
          <label class="form-input">
            <span class="form-label">Telefon:</span>
            <input class="form-text-input"
              type="text" name="telefon"
              value=""
              placeholder="Váš telefon"
              autocomplete="tel">
          </label>
          <label class="form-input">
            <span class="form-label">Dispozice:</span>
            <input class="form-text-input"
              type="text" name="dispozice"
              value=""
              placeholder="např.: dům, nebo 2+kk">
          </label>
          <label class="form-input">
            <span class="form-label">Zpráva:</span>
            <textarea class="form-textarea-input"
              name="zprava"
              placeholder="Popište nám, jaký byt hledáte"></textarea>
          </label>
          <footer class="form-footer">
            <button id="button-hlidacipes" class="button" type="submit" name="submitVzkaz">Odeslat</button>
            <input type="hidden" name="modal" value="1">
            <input type="hidden" name="typ_formulare" value="homepage">
            {{ csrf_field() }}
            {# honeypot_generate() #}
          </footer>

        </form>
      </div>

    </section>
  </template>
{% endblock %}

