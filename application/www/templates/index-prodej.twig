{% block nabidky %}
  {% block nabidky_probihajici %}
    <section id="nabidky" class="nabidky nabidky-probihajici">
      <div class="container">
        <h1 class="nabidky-title">
          {{ data.aukce_probihajici_nadpis }}
        </h1>

        <div class="tabs">
          <div class="tabs-nav">
            <ul class="tab-list" role="tablist">
              <li class="tab-item active">
                <a class="tab-link" href="#vse"
                  role="tab" aria-selected="true" aria-controls="vse">Všechny aukce</a>
              </li>
              <li class="tab-item">
                <a class="tab-link" href="#beroun"
                  role="tab" aria-selected="false" aria-controls="beroun">Beroun</a>
              </li>
                <li class="tab-item">
                <a class="tab-link" href="#praha"
                  role="tab" aria-selected="false" aria-controls="praha">Praha</a>
              </li>
              <li class="tab-item">
                <a class="tab-link" href="#brno"
                  role="tab" aria-selected="false" aria-controls="brno">Brno</a>
              </li>
              <li class="tab-item">
                <a class="tab-link" href="#ostrava"
                role="tab" aria-selected="false" aria-controls="ostrava">Ostrava</a>
              </li>
            </ul>
            <a class="button hlidacipes-tlacitko hlidacipes-js" href="#kontaktujte-nas">
              <i class="icon icon-lupa-2"></i>
              Nastavit hlídacího psa
            </a>
          </div>

          <div class="tabs-panels">
            <div class="tab-panel active" id="vse" role="tabpanel" aria-hidden="false">
              <div class="nabidky-row row">
                {% for aukce in aukce.probihajici %}
                  {% include 'partials/nabidka.twig' %}
                {% else %}
                  <p class="zprava">Momentálně zde nejsou žádné aukce.</p>
                {% endfor %}
              </div>
              {% if aukce.probihajici.hasMorePages() %}
                <p class="nacti-dalsi-wrap">
                  <span class="spinner"></span>
                  <button
                    class="button nacti-dalsi"
                    type="button"
                    data-strana="1"
                    data-stav="probihajici"
                    data-typ="{{ typ }}"
                    data-lokalita="vse">Zobrazit další</button>
                </p>
              {% endif %}
            </div>
            <div class="tab-panel" id="beroun" role="tabpanel" aria-hidden="true">
              <div class="nabidky-row row">
                {% for aukce in aukce.beroun %}
                  {% include 'partials/nabidka.twig' %}
                {% else %}
                  <p class="zprava">Momentálně zde nejsou žádné aukce pro tuto lokalitu.</p>
                {% endfor %}
              </div>
              {% if aukce.beroun.hasMorePages() %}
                <p class="nacti-dalsi-wrap">
                  <span class="spinner"></span>
                  <button
                    class="button nacti-dalsi"
                    type="button"
                    data-strana="1"
                    data-stav="probihajici"
                    data-typ="{{ typ }}"
                    data-lokalita="beroun">Zobrazit další</button>
                </p>
              {% endif %}
            </div>
            <div class="tab-panel" id="praha" role="tabpanel" aria-hidden="true">
              <div class="nabidky-row row">
                {% for aukce in aukce.praha %}
                  {% include 'partials/nabidka.twig' %}
                {% else %}
                  <p class="zprava">Momentálně zde nejsou žádné aukce pro tuto lokalitu.</p>
                {% endfor %}
              </div>
              {% if aukce.praha.hasMorePages() %}
                <p class="nacti-dalsi-wrap">
                  <span class="spinner"></span>
                  <button
                    class="button nacti-dalsi"
                    type="button"
                    data-strana="1"
                    data-stav="probihajici"
                    data-typ="{{ typ }}"
                    data-lokalita="praha">Zobrazit další</button>
                </p>
              {% endif %}
            </div>
            <div class="tab-panel" id="brno" role="tabpanel" aria-hidden="true">
              <div class="nabidky-row row">
                {% for aukce in aukce.brno %}
                  {% include 'partials/nabidka.twig' %}
                {% else %}
                  <p class="zprava">Momentálně zde nejsou žádné aukce pro tuto lokalitu.</p>
                {% endfor %}
              </div>
              {% if aukce.brno.hasMorePages() %}
                <p class="nacti-dalsi-wrap">
                  <span class="spinner"></span>
                  <button
                    class="button nacti-dalsi"
                    type="button"
                    data-strana="1"
                    data-stav="probihajici"
                    data-typ="{{ typ }}"
                    data-lokalita="brno">Zobrazit další</button>
                </p>
              {% endif %}
            </div>
            <div class="tab-panel" id="ostrava" role="tabpanel" aria-hidden="true">
              <div class="nabidky-row row">
                {% for aukce in aukce.ostrava %}
                  {% include 'partials/nabidka.twig' %}
                {% else %}
                  <p class="zprava">Momentálně zde nejsou žádné aukce pro tuto lokalitu.</p>
                {% endfor %}
              </div>
              {% if aukce.ostrava.hasMorePages() %}
                <p class="nacti-dalsi-wrap">
                  <span class="spinner"></span>
                  <button
                    class="button nacti-dalsi"
                    type="button"
                    data-strana="1"
                    data-stav="probihajici"
                    data-typ="{{ typ }}"
                    data-lokalita="ostrava">Zobrazit další</button>
                </p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </section>
  {% endblock %}

  {% block hlidacipes %}
